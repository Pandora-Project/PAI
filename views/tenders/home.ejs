<%- include('../partials/header', { title }) %>

<div class="container">
  <h1>Available Open Tenders</h1>

  <% if (tenders.length === 0) { %>
    <p>No open tenders at the moment.</p>
  <% } else { %>
    <table>
      <thead>
        <tr>
          <th>Name</th>
          <th>Institution</th>
          <th>Start Date</th>
          <th>End Date</th>
          <th>Max Budget</th>
        </tr>
      </thead>
      <tbody>
        <% tenders.forEach(tender => { %>
          <tr onclick="window.location='/tenders/<%= tender.id %>'" style="cursor:pointer;">
            <td><%= tender.name %></td>
            <td><%= tender.institution %></td>
            <td><%= tender.startDate.toISOString().slice(0, 10) %></td>
            <td><%= tender.endDate.toISOString().slice(0, 10) %></td>
            <td>$<%= tender.maxBudget %></td>
          </tr>
        <% }); %>
      </tbody>
    </table>
  <% } %>
</div>

<%- include('../partials/footer') %>
