<%- include('../partials/header', { title: 'Add New Tender' }) %>
<%- include('../layout') %>

<main>
  <h1 style="text-align: center;"><%= title %></h1>

  <form action="/tenders/add" method="POST" style="max-width: 600px; margin: 0 auto; padding: 20px;">
    <div style="display: flex; flex-direction: column; gap: 15px;">

      <label for="name">
        Tender Name:
        <input type="text" id="name" name="name" required style="width: 300px;">
    </label>

      <label for="institution">
        Institution:
        <input type="text" id="institution" name="institution" required style="width: 300px;">
      </label>

      <div style="width: 100%; max-width: 400px; margin-bottom: 20px;">
        <label for="description" style="display: block; margin-bottom: 5px;">
          Description:
        </label>
        <textarea id="description" name="description" rows="4" required style="width: 100%;"></textarea>
      </div>

      <label for="startDate">
        Start Date:
        <input type="datetime-local" id="startDate" name="startDate" required style="width: 300px;">
      </label>

      <label for="endDate">
        End Date:
        <input type="datetime-local" id="endDate" name="endDate" required style="width: 300px;">
      </label>

      <label for="maxBudget">
        Max Budget:
        <input type="number" id="maxBudget" name="maxBudget" required style="width: 300px;">
      </label>

      <button type="submit" style="padding: 10px;">Create Tender</button>
    </div>
  </form>
</main>

<%- include('../partials/footer') %>
